<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
        WAZDE
      </a>
    </div>
    <form action="/users" method="get" class="navbar-form navbar-right" role="search">
